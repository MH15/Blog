<link rel="stylesheet" href="/public/css/article.css">
<link rel="stylesheet" href="/public/css/footer.css">
<!-- syntax highlighting -->
<script src="https://cdn.jsdelivr.net/highlight.js/latest/highlight.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/highlight.js/latest/styles/xcode.min.css">

<!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/highlight.js/latest/styles/github.min.css"> -->
<script>hljs.initHighlightingOnLoad();</script>

<div id="progress"></div>



<article class="middle">
	<div class="header">
		<h1 class="article-title"><%= e.title%></h1>
		<div class="published-date">Published <%= e.date_published.split(" ")[0] %></div>
		<!-- TODO: if edit date is later, display that -->
	</div>
	<div class="image article">
		<!-- <div class="inset" style="background-image: url()"></div> -->
		<img src="<%= e.photo_url %>">
	</div>


	<div class="article-details">
		<div class="author">
			<h3 class="fade">Written by&nbsp</h3>
			<h3><a href="<%= "/author/" + e.author_url %>"><%= e.author %></a></h3>
		</div>



		<div class="read-time"><%= e.read_time %> min read</div>
	</div>

	<div class="content"><%- e.content %></div>


</article>

<footer class="article">
	<div class="descriptor">
		<div class="fade">email.</div>
		<div class="fade">tel. no.</div>
	</div>
	<div class="field">
		<a class="default" href="mailto:contact@panelmag.com">contact@panelmag.com</a>
		<a class="default" href="tel:9378464465">937-846-4465</a>
	</div>
</footer>